<div class="row">
    <div class="col-md-12">
        <h2>Item Details</h2>
        <hr />
        <% if (item) { %>
            <article class="mb-4 p-3 border rounded shadow bg-white">
                <h3><%= item.title %></h3>
                <img src="<%= item.featureImage %>" alt="<%= item.title %>" class="img-fluid mb-3" />
                <p><%= item.body %></p>
                <p><strong>Category:</strong> 
                    <% let categoryObj = categories.find(c => c.id == item.category); %>
                    <%= categoryObj ? categoryObj.name : "Unknown" %>
                </p>
                <p><strong>Price:</strong> $<%= item.price %></p>
                <p><strong>Last Updated:</strong> <%= item.postDate %></p>
            </article>
        <% } else { %>
            <div class="col-md-12 text-center">
                <h2><%= message || "Item not found" %></h2>
                <p>Please try another item.</p>
            </div>
        <% } %>
    </div>
</div>
