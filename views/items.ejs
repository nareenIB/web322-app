<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        
        <% if (items.length > 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Post Date</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Published</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(item => { %>
                            <tr>
                                <td><%= item.id %></td>
                                <td>
                                    <a href="/shop/<%= item.id %>"><%= item.title %></a>
                                </td>
                                <td><%= item.postDate %></td>
                                <td>$<%= item.price %></td>
                                <td>
                                    <% let categoryObj = categories.find(c => c.id == item.category); %>
                                    <a href="/items?category=<%= item.category %>">
                                        <%= categoryObj ? categoryObj.name : "Unknown" %>
                                    </a>
                                </td>
                                <td><%= item.published ? "Yes" : "No" %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="col-md-12 text-center">
                <h2><%= message || "No items available" %></h2>
            </div>
        <% } %>
    </div>
</div>
